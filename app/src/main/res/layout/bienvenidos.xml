<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@drawable/fondoo"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginLeft="100dp"
        android:src="@drawable/iconoooo"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:layout_marginTop="10dp">
        <Button
            android:id="@+id/btn_lugaresTuristicos"
            android:layout_width="190dp"
            android:layout_height="wrap_content"
            android:text="lugarres turisticos"
            android:background="@drawable/boton1"
            android:textColor="@color/text_color"
            android:onClick="btn_lugares"/>
        <Button
            android:id="@+id/btn_museos"
            android:layout_width="190dp"
            android:layout_height="wrap_content"
            android:text="museos"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:background="@drawable/boton1"
            android:textColor="@color/text_color"/>
        <Button
            android:id="@+id/btn_comida"
            android:layout_width="190dp"
            android:layout_height="wrap_content"
            android:text="comida tipica de la paz"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:textColor="@color/text_color"
            android:background="@drawable/boton1"/>
        <Button
            android:id="@+id/btn_musica"
            android:layout_width="190dp"
            android:layout_height="wrap_content"
            android:text="video musical"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:textColor="@color/text_color"
            android:background="@drawable/boton1"/>
        <Button
            android:id="@+id/btn_mapa"
            android:layout_width="190dp"
            android:layout_height="wrap_content"
            android:text="MAPA"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:textColor="@color/text_color"
            android:background="@drawable/boton1"/>
    </LinearLayout>
</LinearLayout>